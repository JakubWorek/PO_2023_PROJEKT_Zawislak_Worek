<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.CheckBox?>
<VBox minHeight="800.0" minWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.proj.presenter.PropsFormPresenter">
   <Label text="Start energy level:" />
   <TextField fx:id="startEnergy" text="100">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
   </TextField>
   <Label text="Max energy level:" />
   <TextField fx:id="maxEnergy" text="100">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
   </TextField>
   <Label text="Energy used while moving:" />
   <TextField fx:id="moveEnergy" text="10">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
   </TextField>
   <Label text="Genes count:" />
   <TextField fx:id="genesCount" text="10">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
   </TextField>
   <Label text="Energy level needed to reproduce:" />
   <TextField fx:id="energyToReproduce" text="60">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
   </TextField>
   <Label text="Energy level to pass to child:" />
   <TextField fx:id="energyToPass" text="20">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin></TextField>
   <Label text="Move style:" />
   <ComboBox fx:id="moveStyleCBox" prefHeight="25.0" prefWidth="370.0">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
   </ComboBox>
   <Label text="Energy restored from plant:" />
   <TextField fx:id="energyFromPlant" text="10">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
   </TextField>
   <Label text="Plants count:" />
   <TextField fx:id="plantCount" text="10">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
   </TextField>
   <Label text="Spawn plant per day:" />
   <TextField fx:id="spawnPlantPerDay" text="10">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
   </TextField>
   <Label text="Animals count:" />
   <TextField fx:id="animalCount" text="10">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
   </TextField>
   <Label text="Map width:" />
   <TextField fx:id="mapWidth" text="10">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
   </TextField>
   <Label text="Map height:" />
   <TextField fx:id="mapHeight" text="10">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
   </TextField>
   <CheckBox fx:id="csvFlag" mnemonicParsing="false" onMouseClicked="#toggleCSVFlag" text="Save simulation results to CSV file">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
   </CheckBox>
   <TextField fx:id="csvFileName" disable="true" promptText="CSV filename" />
   <Button mnemonicParsing="false" onAction="#onNewSimulationClicked" prefHeight="25.0" prefWidth="369.0" text="Start Simulation" />
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</VBox>
